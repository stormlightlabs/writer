{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Writer",
  "version": "0.1.0",
  "identifier": "org.stormlightlabs.writer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      { "label": "main", "title": "Writer", "width": 1200, "height": 800, "minWidth": 600, "minHeight": 400 }
    ],
    "trayIcon": {
      "id": "global_capture_tray",
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true,
      "showMenuOnLeftClick": true,
      "tooltip": "Writer"
    },
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
